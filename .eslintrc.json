{
	"extends": "eslint:recommended",

	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"impliedStrict": true
		}
	},

	"env": {
		"node": true,
		"es6": true
	},

	"globals": {
		"com": false,
		"me": false,
		"android": false
	},

	"plugins": [
		"promise"
	],

	"rules": {
		"eqeqeq": "error",
		"block-scoped-var": "error",
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
		"semi": "error",
		"no-console": ["error", {"allow": ["error"]}],
		"promise/catch-or-return": "error"
	}
}
